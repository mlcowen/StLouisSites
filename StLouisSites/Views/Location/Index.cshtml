@model IEnumerable<StLouisSites.ViewModels.Locations.LocationListItemViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>St. Louis Site Locations:</h1>

<div>

    <hr />
    <table border="1" cellpadding="10">
        <tr>
            <th bgcolor="#cce6ff">Location</th>
            <th width="40%" bgcolor="#cce6ff">Description</th>
            <th bgcolor="#cce6ff">Hours Of Operation</th>
            <th bgcolor="#cce6ff">Average Rating</th>
            <th bgcolor="#cce6ff"></th>
        </tr>
        @*@foreach (var location in Model)*@
        @foreach (var location in Model)

            {
                <tr>
                    <td>@location.Name</td>
                    <td>@location.Description</td>
                    <td>@location.HoursOfOperation</td>
                    @if (@location.LocationReviews.Count > 0)
                    {
                        <td>Ratings Exist</td>
                        @*<td>@location.LocationReviews</td>*@
                    }
                    else
                    {
                        <td>not reviewed</td>
                    }
                    <td>
                        <a asp-controller="Location" asp-action="Details" asp-route-id="@location.Id">View</a> |
                        <a asp-controller="LocationReview" asp-action="Create" asp-route-LocationId="@location.Id">Rate</a>
                    </td>
                    @*<td>@location.AverageRating</td>*@
                </tr>
            }

    </table>

