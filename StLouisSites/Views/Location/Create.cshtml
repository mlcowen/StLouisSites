@*@model StLouisSites.Models.Location*@
@model StLouisSites.ViewModels.Locations.LocationCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Location</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfOperation " class="control-label">Hours Of Operation</label>
                <input asp-for="HoursOfOperation" class="form-control" />
                <span asp-validation-for="HoursOfOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address " class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <br/>
                <select asp-for="Region" required class="custom-select custom-select-lg mb-3">
                    <option value=""></option>
                    <option>North St. Louis County</option>
                    <option>South St. Louis County</option>
                    <option>St. Charles County</option>
                    <option>St. Louis City</option>
                    <option>West St. Louis County</option>
                </select>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryIds" class="control-label"></label>
                <div class="scroll-checkbox">
                    @foreach (var category in Model.Categories)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="CategoryIds" value="@Model.CategoryIds" />
                            <label class="form-check-label">@category.Name</label>
                        </div>

                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
